<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"  tools:context=".MainActivity">


    <ImageView
        android:contentDescription="@string/city"
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="City"
        android:textSize="50dp"
        android:textStyle="bold|italic"
        android:textColor="@color/link_text_material_light"
        android:textColorHighlight="@color/accent_material_dark"
        android:id="@+id/CityView"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/button"
        android:layout_alignEnd="@+id/button"
        />

    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/pager"
        android:layout_below="@id/CityView"
        android:layout_margin="20dp"
        android:padding="15dp"
        android:background="#99000000">

        <LinearLayout android:layout_width="wrap_content"
            android:layout_height="380dp"
            android:orientation="vertical"
            android:id="@+id/DayPage1"
            >

            <EditText
                android:layout_height="wrap_content"
                android:id="@+id/Day1"
                android:text="Today"
                android:textColor="@android:color/white"
                android:editable="false"
                android:layout_width="@dimen/abc_panel_menu_list_width"
                />

            <TextView
                android:textSize="@dimen/abc_text_size_body_2_material"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Day1Temperature"
                android:textColor="@android:color/white"
                android:text="Day1Temperature"
                />

        </LinearLayout>

        <LinearLayout android:layout_width="wrap_content"
            android:layout_height="380dp"
            android:orientation="vertical"
            android:id="@+id/DayPage2">

            <EditText
                android:layout_height="wrap_content"
                android:id="@+id/Day2"
                android:text="Tomorrow"
                android:editable="false"
                android:layout_width="@dimen/abc_panel_menu_list_width"
                />

            <TextView
                android:textSize="@dimen/abc_text_size_body_2_material"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Day2Temperature"
                android:text="Day2Temperature"
                />

        </LinearLayout>
        <LinearLayout android:layout_width="wrap_content"
            android:layout_height="380dp"
            android:orientation="vertical"
            android:id="@+id/DayPage3">

            <EditText
