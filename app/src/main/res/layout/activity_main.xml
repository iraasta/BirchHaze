                android:text="Day4Temperature" />

        </LinearLayout>
        <LinearLayout android:layout_width="wrap_content"
            android:layout_height="380dp"
            android:orientation="vertical"
            android:id="@+id/DayPage5">

            <EditText
                android:layout_height="wrap_content"
